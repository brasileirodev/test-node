{
  "compilerOptions": {
    "target": "es2016",                                  
    "experimentalDecorators": true, 
    "lib" : ["es6"],                
    "emitDecoratorMetadata": true,                        
    "module": "commonjs",                                
    "rootDir": "./src",                                  
    "typeRoots": [
       "./node_modules/@types",
       "./src/@types"
     ],                                  
   "resolveJsonModule": true,                        
    "allowJs": true,                                  
    "outDir": "./dist",                                   
    "removeComments": true,                           
    "esModuleInterop": true,                                
    "forceConsistentCasingInFileNames": true,              
    "strict": true,                                          
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@modules/*": ["./src/modules/*"],
      "@shared/*": ["./src/shared/*"],
      "@errors/*": ["./src/shared/errors/*"],
      "@config/*": ["./src/config/*"]
    }
  },
  "include": [
    "./src/**/*"
  ]
}
